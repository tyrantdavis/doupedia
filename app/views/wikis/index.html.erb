<div class="container-fluid">
  <div class="row"></div>
 <h1 class="text-center text-muted clear">Wikis</h1>


 </div>
 <% if !user_signed_in? %>
  <span id="hey">HEY!</span>
      <%= link_to "CLiCk2jOInUS!", new_user_registration_path, class: 'btn btn-info btn-lg' %> <span id="fadedFree"> IT'S FREE</span>
      <% end %>

 <br />
 <br />
 <div class="digg_pagination">
     <div class="page_info">
       <%= page_entries_info @wikis %>
     </div>
     <%= will_paginate @wikis, :container => false %>
   </div>

<span>&nbsp;</span>
 <div class="row">
   <div class="col-md-12 page_info">
       <% @wikis.each do |wiki| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to wiki.title, wiki %>
           </h4>

           <small>
             <%= markdown_text(wiki.body) %>
           </small>
         </div>
       </div>
     <% end %>
   </div>
 </div>
 <div>
   <br />
   <br />
   <% if user_signed_in? %>
  <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-warning' %>
</div>
<% end %>
