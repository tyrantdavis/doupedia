<h1 class="text-center text-muted">Edit Wiki</h1>

<div class="row">

  <div class="col-md-12">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <div class="col-md-6">
        <%= f.submit "Save", class: 'btn btn-default btn-block' %>
      </div></br>
    <% end %>
  <div class="col-md-6">
    <%= link_to "Cancel", @wiki, class: 'btn btn-primary btn-block' %>
  </div>
</div>
<span>&nbsp;</span>
<% if current_user.role == "premium_user" || current_user.role == "admin"  %>
   <div class="form-group">
     <%= f.label :private %>
     <%= f.check_box :private %>
    </div>
    <h3> Collaborators Dash </h3>
    <table class="table">
            <% @wiki.collaborators.each do |collaborator| %>
      <tr>
              <td> <%= collaborator.user.name %> </td>
        <td>
                <%= link_to "Remove Collaborator", wiki_collaborator_path(collaborator.id), method: :delete, class: 'btn btn-danger' %>
        </td>
      </tr>
     <% end %>
         </table>

        <%= link_to "Add Collaborator", new_wiki_collaborator_path(wiki_id: @wiki.id), class: 'btn btn-success' %>
 <% end %>
<% end %>
</div>
