<h1 class="text-center text-muted">Edit Wiki</h1>

<div class="row">

  <div class="col-md-12">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <% if current_user.premium? || current_user.admin?  %>
         <div class="form-group">
           <%= f.label :private %>
           <%= f.check_box :private %>
          </div>
      <% end %>

      <div class="col-md-6">
        <%= f.submit "Save", class: 'btn btn-default btn-block' %>
      </div>
    <% end %>
  <div class="col-md-6">
    <%= link_to "Cancel", @wiki, class: 'btn btn-primary btn-block' %>
  </div>
</div>

<% if current_user.premium? || current_user.admin?  %>
  <%= link_to "Manage Collaborators", wiki_collaborators_path(@wiki), class: "btn btn-info" %>
<% end %>
