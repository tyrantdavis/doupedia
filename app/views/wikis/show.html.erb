<h1>Title: <%= @wiki.title %></h1>

<div class="row">
  <div class="col-md-12">
    <p>Body: <%= markdown_text(@wiki.body) %></p>
  </div>
</div>
<span>&nbsp;</span>

<% if @wiki.private %>
	<% if @wiki.user == current_user %>
				<div class="btn btn-block btn-warning">Private wiki</div>
		<% else %>
			<div class="btn btn-block btn-warning">Creator <%= @wiki.user.name %></div>
		<% end %>
 <% else %>
   <i>Public wiki</i>
 <% end %>

</div>
<% if policy(@wiki).edit? %>
<div class="col-md-6 margin-bottom">
  <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-primary btn-block' %>
</div>
<% end %>
<% if policy(@wiki).destroy? %>
  <div class="col-md-6">
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-default btn-block', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
</div>
<% end %>
<% if policy(@wiki).create? %>
  	<p><%= link_to "New wiki", new_wiki_path, class: 'label label-info' %></p>
 <% end %>
 <% if @wiki.private? %>
 	<%= render  'collaborators/form', locals: { wiki: @wiki} %>
<% end %>
