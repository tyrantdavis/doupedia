<h1><%= @wiki.title %></h1>
<small>
    submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <b><%= @wiki.user.name %></b>
  </small>
<div class="container">
<div class="row">
  <div class="col-md-12">
    <p><%= markdown_text(@wiki.body) %></p>
  </div>
</div>
<span>&nbsp;</span>

<% if @wiki.private %>
	<% if @wiki.user == current_user %>
				<div class="btn btn-block btn-warning">Private wiki</div>
		<% else %>
			<div class="btn btn-block btn-warning">Creator <%= @wiki.user.name %></div>
		<% end %>
 <% else %>
   <i>Public wiki</i>
 <% end %>
</div>
<% if user_signed_in? && policy(@wiki).edit? %>
  <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-primary btn-lg' %>
    <%= link_to "Back2Wikis", wikis_path, class: 'btn btn-info btn-lg' %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger btn-lg', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
  <% else %>
    <%= link_to "Back2Wikis", wikis_path, class: 'btn btn-info btn-lg' %>

<% end %>
<% if policy(@wiki).create? %>
  	<p><%= link_to "New wiki", new_wiki_path, class: 'label label-info' %></p>
 <% end %>
 <% if @wiki.private? %>
 	<%= render  'collaborators/form', locals: { wiki: @wiki} %>
<% end %>
